<Window x:Class="MineSweeper.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MineSweeper"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Height="250" Width="400">
    <StackPanel>
        <TextBlock Text="About" HorizontalAlignment="Center" FontSize="44" FontWeight="Bold"/>
        <TextBlock Margin="10 0 10 0" TextAlignment="Justify" TextWrapping="Wrap" Text="Created by Povilas Pliuskus on the work of Andrei Lucaci based on the original minesweeper computer game created by Curt Johnson for OS/2, and ported to Microsoft Windows by Robert Donner."/>
        <TextBlock Margin="10 10 10 5" Text="Source files:"/>
        <TextBlock Margin="10 0 10 0" Text="https://github.com/PovilasPliuskus/MineSweeper"/>
        <TextBlock Margin="10 0 10 0" Text="https://github.com/AndreiLucaci/minesweeper"/>
    </StackPanel>
</Window>
